<script>
    const updateBookButton = () => {
        const bookId = document.getElementById('input-id').value;
        const bookTitle = document.getElementById('input-title').value;

        fetch(location.href=`/livros/updateBook/${bookId}/${bookTitle}`, {
            method: 'PUT'
        })
        .then(response => window.alert('Livro atualizado com sucesso!'))
        .catch(error => window.alert(`Ocorreu um erro: ${error}`));
    }
</script>

<form align="center">
    <label>Responda os campos abaixo para atualizar um livro pelo seu ID</label>
    <label>
        ID do livro
        <input type="text" name="title" id="input-id">
    </label>
    <label>
        Novo t√≠tulo
        <input type="text" name="title" id="input-title">
    </label>

    <button type="submit" onclick="updateBookButton()">Atualizar</button>
</form>